<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF8F8F8">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="#FFF8F8F8"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="마이페이지"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/readtextview"
                    android:layout_marginTop="4dp"
                    android:textColor="#757575"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="나의 정보를 확인하고 수정할 수 있습니다"/>



            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:padding="0dp"
        />

    <TextView
        android:id="@+id/userEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="0dp"/>

    <TextView
        android:id="@+id/userGenderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="0dp"/>

    <TextView
        android:id="@+id/userPhoneNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="0dp"/>

    <TextView
        android:id="@+id/userPetNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="0dp"/>

    <TextView
        android:id="@+id/userPetGenderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="0dp"/>

    <TextView
        android:id="@+id/userPetNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="0dp"/>

    <!-- 이름 입력란 -->
    <EditText
        android:id="@+id/editName"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userPhoneNumberTextView"
        android:hint="이름"
        android:inputType="text"/>

    <!-- 이메일 입력란 -->
    <EditText
        android:id="@+id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editName"
        android:hint="이메일"
        android:inputType="textEmailAddress"/>

    <!-- 성별 입력란 -->
    <EditText
        android:id="@+id/editGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editEmail"
        android:hint="성별"
        android:inputType="text"/>

    <!-- 생년월일 입력란 -->
    <EditText
        android:id="@+id/editPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editGender"
        android:hint="생년월일"
        android:inputType="text"/>

    <!-- 펫 이름 입력란 -->
    <EditText
        android:id="@+id/editPetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editPhoneNumber"
        android:hint="펫 이름"
        android:inputType="text"/>

    <!-- 펫 성별 입력란 -->
    <EditText
        android:id="@+id/editPetGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editPetName"
        android:hint="펫 성별"
        android:inputType="text"/>

    <!-- 펫 나이 입력란 -->
    <EditText
        android:id="@+id/editPetNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editPetGender"
        android:hint="펫 나이"
        android:inputType="text"/>


    <android.widget.Button
        android:background="@drawable/button_rounded_background"
        android:textColor="@color/white"
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="변경"
        android:layout_below="@id/editPetNumber"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="0dp"/>

</LinearLayout>
</ScrollView>